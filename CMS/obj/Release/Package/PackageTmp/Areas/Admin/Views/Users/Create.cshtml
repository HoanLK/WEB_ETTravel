
@{
    ViewBag.Title = "Thông tin tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div ng-app="myApp">
    <div ng-controller="themInfoUserController">
        <div class="row">
            <div class="col-md-2">
                <button type="button" class="btn btn-block btn-sm ink-reaction btn-success" ng-click="saveUser()"><span class="fa fa-edit"></span> Lưu</button>
            </div>
            <div class="col-md-2">
                <button type="button" class="btn btn-block btn-sm ink-reaction btn-danger" ng-click="cancel()"><span class="fa fa-remove"></span> Hủy bỏ</button>
            </div>
        </div>
        <hr class="ruler-lg" />
        <div class="card">
            <div class="card-body">
                <form class="form" role="form">
                    <div class="row">
                        <div class="col-md-7">
                            <div class="form-group  " ng-class="{'has-error':!User.Username, 'has-success':User.Username}">
                                <input type="text" class="form-control" id="Username" name="Username" ng-model="User.Username">
                                <label for="title">Tên đăng nhập *</label>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" id="hoten" name="hoten" ng-model="User.hoten" />
                                <label for="link">Họ tên</label>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" id="sdt" name="sdt" ng-model="User.sdt" />
                                <label for="link">Số điện thoại</label>
                            </div>
                            <div class="form-group">
                                <input type="text" name="image" id="image" ng-model="User.image" class="form-control" /> <button class="btn btn-primary" ng-click="chooseImage()">Chọn ảnh</button>
                                <label for="image">Hình ảnh (1250x400)</label>
                                <img class="img-responsive" src="{{User.image}}" ng-show="User.image" />
                            </div>
                            @*<div class="form-group">
                                <input type="text" class="form-control" id="Chucvu" name="Chucvu" ng-model="User.chuvu" />
                                <label for="Chucvu">Chức vụ</label>
                            </div>*@
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>


