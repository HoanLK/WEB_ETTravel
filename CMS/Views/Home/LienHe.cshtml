
@{
    ViewBag.Title = "LienHe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 TTLienHe" ng-controller="ContactController">
    <p class="TieuDe">Thông tin liên hệ</p>
    <div class="form-group" ng-class="{'has-error':!Contact.hoten, 'has-success':Contact.hoten}">
        <input type="text" class="form-control" id="name" placeholder="Họ tên (bắt buộc)" ng-model="Contact.hoten">
    </div>
    <div class="form-group">
        <input type="text" class="form-control" id="diachi" placeholder="Địa chỉ" ng-model="Contact.diachi">
    </div>
    <div class="form-group col-md-6" ng-class="{'has-error':!Contact.sdt, 'has-success':Contact.sdt}" style="padding-left:0;">
        <input type="text" class="form-control" id="sdt" placeholder="Số điện thoại (bắt buộc)" ng-model="Contact.sdt">
    </div>
    <div class="form-group col-md-6" style="padding-right:0;">
        <input type="email" class="form-control" id="email" placeholder="Email" ng-model="Contact.email">
    </div>
    <div class="form-group">
        <input type="text" class="form-control" id="tieude" placeholder="Tiêu đề liên hệ" ng-model="Contact.title">
    </div>
    <div class="form-group">
        <textarea class="form-control" rows="5" id="noidung" placeholder="Nội dung liên hệ" ng-model="Contact.content"></textarea>
    </div>
    <button type="button" class="btnGui" ng-click="SaveContact()">Gửi</button>
</div>

<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 DiaChi">
    <p class="TieuDe">Địa chỉ</p>
    <p class="LienHe"><span class="fa fa-home"></span> 1 lô 22 Lê Hồng Phong, Ngô Quyền, Hải Phòng</p>
    <p class="LienHe"><span class="fa fa-phone"></span> 0313.989.888 - 09.1111.83.88</p>
    <p class="LienHe"><span class="fa fa-envelope-o"></span> ettravel.hp@gmail.com</p>
</div>